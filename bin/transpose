#!/bin/sh

# transpose a tsv file.
# TODO: allow specification of field delimiter

awk -F "\t" 'BEGIN { OFS="\t" }
{
  for (i=1; i<=NF; i++) {
    a[NR,i] = $i
  }
}
NF>p { p = NF }
END {
  for(j=1; j<=p; j++) {
    str=a[1,j]
    for(i=2; i<=NR; i++) {
      str = str OFS a[i,j]  # Use OFS (tab) for concatenation
    }
    print str
  }
}' "$@"
